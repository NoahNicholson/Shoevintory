@model IEnumerable<Shoevintory.Models.Collection>

@{
    ViewData["Title"] = "Index";
}

<h1>My Collections</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">New Collection</a>
</p>
<table class="table">
   
    <tbody>
@foreach (var item in Model) {
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>*@
            <td><h3>
                @Html.DisplayFor(modelItem => item.Name)
                    </h3>
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.UserProfileId)
            </td>*@
            <td>
                 <a class="btn btn-primary" asp-route-id="@item.Id" asp-action="Details">Details</a>
                    <a class="btn btn-danger" asp-route-id="@item.Id" asp-action="">Delete</a>
               
            </td>
        </tr>
}
    </tbody>
</table>
